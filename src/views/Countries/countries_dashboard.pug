extends ../layout.pug

block additionalStyles
  link(rel="stylesheet", href="sub_dashboard.css")
  link(rel="stylesheet", href="style.css")
block content
  .video-bg
    video.bg-video(autoplay, loop, muted)
      source(src="IMG_2507.MOV", type="video/mp4")
  main
    h1 Country Report Dashboard
    .data-sections 
     a(href="/countries/world")
      section.data-card
        img(src="world.png", alt="")
        h2 In the world
        p Explore population of all countries in the world
     a(href="/countries/continent/Europe") 
      section.data-card  
        img(src="continents.png", alt="")
        h2 By Continents
        p Get data of countries in different continents
     a(href="/countries/region/British Islands")   
      section.data-card
        img(src="region.png", alt="")
        h2 By Region
        p Discover regional country population insights