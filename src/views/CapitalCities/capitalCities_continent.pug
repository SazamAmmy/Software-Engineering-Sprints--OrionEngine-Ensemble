extends ../layout.pug

block content
    // Main title for the city data page
    h3.text-center.mb-4.city-heading Capital City Information

    form(id="countryForm")
        input(type="text", id="countryInput", placeholder="Enter Continent")
        button(type="submit") Search

    script.
      document.getElementById('countryForm').onsubmit = function() {
        var value = document.getElementById('countryInput').value;
        window.location.href = `/capitalCities/continent/${value}`;
        return false; // Prevent default form submission
      }

    // Table to display city data
    table
        thead
            tr
                th Index
                th Country-Code
                th Name
                th Population
        
        // Body of the table containing the city data
        tbody
            // Serial number initialization for city entries
            - var index = 0
            // Iteration over each city to populate the table
            each city in cities
                - index++
                tr
                    td= index
                    td= city.CountryCode
                    td= city.Name 
                    td= city.Population.toLocaleString()